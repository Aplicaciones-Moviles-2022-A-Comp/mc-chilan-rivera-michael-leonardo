<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#656565</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
    </style>

    <style name="ResultInfoLbl">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ResultInfo">
        <item name="android:layout_marginStart">@dimen/_2sdp</item>
    </style>

    <style name="MovieTitle">
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="UnderTitleInfo">
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="DetailInfoLbl" parent="ResultInfoLbl">
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
    </style>

    <style name="DetailInfo" parent="ResultInfo">
        <item name="android:layout_marginStart">@dimen/_4sdp</item>

        <item name="android:layout_marginTop">@dimen/_8sdp</item>
    </style>

    <style name="DetailsButton">
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>