<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrearPersonaje">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="600px"
        android:layout_height="120px"
        android:layout_marginTop="30dp"
        android:text="NUEVO PERSONAJE"
        android:textColor="#000000"
        android:textSize="3mm"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.269"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024" />

    <TextView
        android:id="@+id/tv_fecha_nacimiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Fecha de Nacimiento"
        app:layout_constraintEnd_toEndOf="@+id/textView6"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout16"
        android:layout_width="326dp"
        android:layout_height="56dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_fecha_nacimiento"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_fecha_nacimiento"
        app:layout_constraintTop_toBottomOf="@+id/tv_fecha_nacimiento">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/til_fecha_nacimiento"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Ingrese la fecha de nacimiento del Personaje" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tv_personaje_principal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="¿Es un Personaje Principal?"
        app:layout_constraintEnd_toEndOf="@+id/textInputLayout16"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textInputLayout16"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout16" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout17"
        android:layout_width="326dp"
        android:layout_height="56dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_personaje_principal"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_personaje_principal"
        app:layout_constraintTop_toBottomOf="@+id/tv_personaje_principal">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/til_personaje_principal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Indique si es un Personaje Principal" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tv_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Nombre del Personaje"
        app:layout_constraintEnd_toEndOf="@+id/textInputLayout17"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textInputLayout17"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout17" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout18"
        android:layout_width="326dp"
        android:layout_height="56dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_nombre"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_nombre"
        app:layout_constraintTop_toBottomOf="@+id/tv_nombre">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/til_nombre_personaje"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Ingrese el nombre del Personaje" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tv_edad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Indique la edad inicial del Personaje"
        app:layout_constraintEnd_toEndOf="@+id/textInputLayout18"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textInputLayout18"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout18" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout19"
        android:layout_width="326dp"
        android:layout_height="56dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_edad"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_edad"
        app:layout_constraintTop_toBottomOf="@+id/tv_edad">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/til_edad"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Ingrese la edad inicial del Personaje" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tv_altura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Altura del Personaje"
        app:layout_constraintEnd_toEndOf="@+id/textInputLayout19"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textInputLayout19"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout19" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout20"
        android:layout_width="326dp"
        android:layout_height="56dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_altura"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_altura"
        app:layout_constraintTop_toBottomOf="@+id/tv_altura">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/til_altura"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Ingrese la altura del Personaje" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_actualizar_personaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="AÑADIR"
        app:layout_constraintEnd_toEndOf="@+id/textInputLayout20"
        app:layout_constraintHorizontal_bias="0.102"
        app:layout_constraintStart_toStartOf="@+id/textInputLayout20"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout20" />

    <Button
        android:id="@+id/btn_cancelar_personaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:text="CANCELAR"
        app:layout_constraintBottom_toBottomOf="@+id/btn_actualizar_personaje"
        app:layout_constraintStart_toEndOf="@+id/btn_actualizar_personaje"
        app:layout_constraintTop_toTopOf="@+id/btn_actualizar_personaje"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>